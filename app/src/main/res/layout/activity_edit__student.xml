<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.Student_Fragment.Home.Edit_Student">

    <include
        android:id="@+id/tool"
        layout="@layout/toolbar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tool"
        android:fadeScrollbars="true"
        android:scrollbarFadeDuration="0"
        android:scrollbars="vertical"
        android:verticalScrollbarPosition="right">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="#0F504848"
            android:padding="16dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:textColorHint="#FE22B3E8">

                <EditText
                    android:id="@+id/studnm"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/textinputborder"
                    android:ems="10"
                    android:hint="Full Name"
                    android:inputType="textPersonName"
                    android:shadowColor="#000"
                    tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#FE22B3E8"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp">

                <EditText
                    android:id="@+id/prn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/textinputborder"
                    android:ems="10"
                    android:hint="PRN Number"
                    android:inputType="number"
                    tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:textColorHint="#FE22B3E8">

                <EditText
                    android:id="@+id/studcontact"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/textinputborder"
                    android:ems="10"
                    android:hint="Contact Name"
                    android:inputType="number"
                    tools:ignore="SpeakableTextPresentCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#FE22B3E8"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <EditText
                    android:id="@+id/studemail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/textinputborder"
                    android:ems="10"
                    android:hint="Email Id"
                    android:inputType="textEmailAddress"
                    tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="#1B1A1A"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Select Branch : "
                android:textSize="25sp"
                android:textStyle="bold" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/textinputborder"
                android:layout_marginTop="20dp"
                android:fadeScrollbars="true"
                android:scrollbarFadeDuration="0"
                android:scrollbars="vertical"
                android:verticalScrollbarPosition="right">

                <LinearLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/radio"
                        android:orientation="vertical"/>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="#1B1A1A"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Select Year : "
                android:textSize="25sp"
                android:textStyle="bold" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/textinputborder"
                android:layout_marginTop="20dp"
                android:fadeScrollbars="true"
                android:scrollbarFadeDuration="0"
                android:scrollbars="vertical"
                android:verticalScrollbarPosition="right">

                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioSem"
                        android:orientation="vertical">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/first"
                            android:text="1 Sem"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/second"
                            android:text="2 Sem"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/third"
                            android:text="3 Sem"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/fourth"
                            android:text="4 Sem"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/fifth"
                            android:text="5 Sem"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/sixth"
                            android:text="6 Sem"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/seventh"
                            android:text="7 Sem"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/eight"
                            android:text="8 Sem"/>


                    </RadioGroup>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="Submit"
                android:layout_marginBottom="20dp"
                android:background="#FE22B3E8"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>